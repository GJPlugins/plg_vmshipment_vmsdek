    <name>Vmsdek</name>
    <creationDate>25.11.22 16:03</creationDate>
    <author>Gartes</author>
    <authorUrl></authorUrl>
    <copyright>Copyright (C) 2005 - 2022 Gartes. All rights reserved.</copyright>
    <version>1.0.0</version>
    <description>VMSHIPMENT_VMSDEK_PLUGIN_DESC</description>
    <files>
        <folder>assets</folder>
        <folder>helpers</folder>
        <folder>language</folder>
        <folder>tmpl</folder>
        <filename plugin="vmsdek">vmsdek.php</filename>
    </files>
    <!-- Update servers -->
    <updateservers>
        <server type="extension" priority="1" name="vmsdek">
            https://raw.githubusercontent.com/GJPlugins/plg_vmshipment_vmsdek/main/vmsdek-update.xml
        </server>
    </updateservers>
    <vmconfig>
        <fields name="params" addfieldpath="/libraries/GNZ11/Extensions/Fields">
            <fieldset name="extension">
                <!-- ! Требует наличие и подключения библиотеки GNZ11 -->
                <field name="_extensionVersion"
                       type="version"
                       path_xml="/plugins/vmshipment/vmsdek/vmsdek.xml"
                       class="_extensionVersion"
                       filter="raw"/>
            </fieldset>
        </fields>
    </vmconfig>
</extension>